<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bege_claro"
    tools:context=".TelaBemVindo">

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:text="Seja Bem-vindo(a) ao Leontis!"
        android:textAlignment="center"
        android:textColor="@color/preto"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="221dp"
        android:layout_height="386dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/input"
        android:fontFamily="@font/inter"
        android:gravity="center_vertical"
        android:padding="20sp"
        android:text="Nosso aplicativo espera ajudá-lo a conhecer mais sobre a cultura artística de seu país e também a proporcionar a melhor experiência na hora de visitar museus.  Leontis, a arte na palma da sua mão!"
        android:textAlignment="center"
        android:textColor="@color/preto"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView10" />

    <Button
        android:id="@+id/btn_finalizar_bem_vindo"
        android:layout_width="160dp"
        android:layout_height="55dp"
        android:layout_marginBottom="90dp"
        android:background="@drawable/botao"
        android:fontFamily="@font/lexend_exa"
        android:text="Finalizar"
        android:textColor="@color/branco"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="255dp"
        android:layout_height="406dp"
        android:layout_marginTop="20dp"
        android:elevation="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/moldura" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="100dp"
        android:layout_height="84dp"
        android:layout_marginEnd="190dp"
        android:layout_marginBottom="390dp"
        android:rotation="45"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/btn_finalizar_bem_vindo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView10"
        app:srcCompat="@drawable/icon_sem_fundo" />
</androidx.constraintlayout.widget.ConstraintLayout>
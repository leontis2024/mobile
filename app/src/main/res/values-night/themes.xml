<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Leontis" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">@color/vinho_claro</item>
        <item name="android:windowBackground">@color/bege_claro</item>
        <item name="colorControlActivated">@color/vinho_claro</item>
        <!-- Cor para o estado normal (quando o CheckBox não está marcado) -->
        <item name="colorControlNormal">@color/vinho_claro</item>
        <!-- Cor do destaque (ripple effect) -->
        <item name="colorControlHighlight">@color/vinho_escuro</item>
        <item name="colorAccent">@color/vinho_escuro</item>
        <item name="android:fontFamily">@font/inter</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@color/bege_claro</item>
        <item name="android:windowLightNavigationBar">true</item>
        <item name="android:windowLightStatusBar">true</item>

    </style>

    <style name="Widget.App.BottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView.Colored">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.BottomNavigationView</item>
    </style>

    <style name="ThemeOverlay.App.BottomNavigationView" parent="">
        <item name="colorOnPrimary">@color/bege_claro</item>
    </style>
    <style name="Theme.Leontis" parent="Base.Theme.Leontis" />
    <style name="arredondar" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">30dp</item>
        <item name="color">@color/vinho_claro</item>
    </style>
    <style name="CustomFloatingActionButton" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="backgroundTint">@color/preto</item>
        <item name="rippleColor">@android:color/transparent</item>
        <item name="elevation">0dp</item>
    </style>

</resources>